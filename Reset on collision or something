using System.Collections;
using System.Collections.Generic;
// DONT FORGET TO ADD THIS
using UnityEngine.SceneManagement;
using UnityEngine;

public class RestartGame : MonoBehaviour
{
    // WE CALL THE UPDATE FUNCTION
    private void Update()
    {
        // IF PLAYER CLICKS "r" WE CALL OUR RESTART FUNCTION
        if (Input.GetKeyDown("r"))
            Restart();
    }
     
     // WE CREATE RESTART FUNCTION
    void Restart()
    {
            // THIS CODE GETS OUR SCENE AND LOAD IT AGAIN
            SceneManager.LoadScene(SceneManager.GetActiveScene().name);
    }

    // THIS IS AN EXAMPLE OF RESTARTING ON EVENT IN THIS CASE ON COLLISION
    private void OnCollisionEnter(Collision collision)
    {
        // IF THE PLAYER COLLIDES WITH GAMEOBJECT WITH TAG "RestartGame" WE CALL OUR RESTART FUNCTION
        if (collision.gameObject.CompareTag("RestartGame"))
            Restart();
    }
}
